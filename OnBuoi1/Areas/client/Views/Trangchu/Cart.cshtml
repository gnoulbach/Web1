@section scripts{
    <script>

        var cart = {
            init: function () {
                cart.search(1);
                cart.order();
                $("#search").change(function () {
                    cart.search(1);
                });
                $("#order").click(function () {
                    cart.order();
                    cart.search(1);
                });


            },
            search: function () {
                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,
                    url: '/Client/trangchu/Mycart/',
                    success: function (res) {

                        $("#tbData").html(res.data);
                        $("#tongtien").val(res.tong)
                    },
                });
            },
            order: function () {

                var name = $("#name").val();
                if (name == null || name == "") {
                    //alert("Nhập tên người nhận hàng ");
                    return;
                }
                var sdt = $("#sdt").val();
                if (sdt == null || sdt == "") {
                    //alert("Nhập SDT người nhận hàng ");
                    return;
                }
                var address = $("#address").val();
                if (address == null || address == "") {
                   //alert("Nhập địa chỉ người nhận hàng ");
                    return;
                }
                var tongtien = $("#tongtien").val();
                var form = new FormData()
                form.append("name", name);
                form.append("sdt", sdt);
                form.append("address", address);
                form.append("tongtien",tongtien);
                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,
                    data: form,
                    url: '/client/Trangchu/Order/',
                    success: function (res) {
                       alert(res.mess);
                        cart.search(1);
                    },
                });
            },

            updateTotal: function (id) {
                var soluong = $("#qua_" + id).val();
                if (soluong < 1) {
                    alert("Số lượng mua phải lớn hơn 0 ");
                    return;
                }
                //if (soluong == 0) {
                //    var form = new FormData()
                //    form.append("id", id);
                //    $.ajax({
                //        type: 'POST',
                //        dataType: 'Json',
                //        contentType: false,
                //        processData: false,
                //        data: form,
                //        url: '/Client/trangchu/Delete/',
                //        success: function (res) {
                //            _layout.showtoast("Xóa sản phẩm thành công ");
                //            return;
                //        }
                //    });
                //}
                else {
                    var form = new FormData()
                    form.append("id", id);
                    form.append("soluong", soluong);
                    $.ajax({
                        type: 'POST',
                        dataType: 'Json',
                        contentType: false,
                        processData: false,
                        data: form,
                        url: '/client/Trangchu/updateTotal/',
                        success: function (res) {
                            $("#total_" + id).val(res.tongtien);
                            $("#tongtien").val(res.total);
                            cart.search(1);

                        }
                    });
                }
            },

            delete: function (id) {
                var form = new FormData()
                    form.append("id", id);
                if (confirm("Bạn có muốn xóa hay không?")) {
                    //Hanfh ddoonjg gọi action xóa
                    $.ajax({
                        type: 'POST',
                        dataType: 'Json',
                        contentType: false,
                        processData: false,
                        data: form,
                        url: '/Client/trangchu/Delete/',
                        success: function (res) {
                        alert(res.mess);
                        cart.search(1);

                        }
                    });
                    }
            }

        }
        cart.init();

    </script>
}
