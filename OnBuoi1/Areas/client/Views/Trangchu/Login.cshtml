@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Assets/Login/test.css" rel="stylesheet" />
</head>
<body>
    <style>
        
    #loading {
        background-color: white;
        position: fixed;
        display: block;
        top: 0;
        bottom: 0;
        z-index: 1000000;
        opacity: 0.5;
        width: 100%;
        height: 100%;
        text-align: center;
    }

        #loading img {
            width: 300px;
            height: 300px;
            margin: auto;
            display: block;
            top: calc(30% );
            left: calc(40% );
            position: absolute;
            z-index: 999999;
        }

    .no-wrap {
        white-space: nowrap;
    }

        a {
            position: absolute;
            right: 0; /* Align to the right */
            margin-left: auto;
            text-decoration: none;
            color: #fff;
            font-size: 12px;
            top: calc(95% ); /* Adjust the top distance as needed */
        }

        form {
            position: relative;
        }
        
</style>
<div id="loading" style="display:none">
    <img src="~/Assets/Client/bach1.gif" alt="Loading..." />
</div>
    <div class="login-box">
        <h2>Login</h2>
        <form>
            <div class="user-box">
                <input type="text" name="" id="username" required="">
                <label>Username</label>
            </div>
            <div class="user-box">
                <input type="password" id="password" name="" required="">
                <label>Password</label>
            </div>
            
            <button type="button" id="login">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Login
            </button>
            <div>
                <a href="https://localhost:7244/Client/trangchu/Signin/">Đăng ký tài khoản</a>
            </div>
            
        </form>

        
    </div>



    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script src="~/Assets/Client/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <script src="~/Assets/Client/js/popper.js"></script>

    <script>
        var login = {
            init: function () {

                $("#login").click(function () {

                    login.dangnhap();
                });
            },
            dangnhap: function () {
                var username = $("#username").val();
                var password = $("#password").val();
                var form = new FormData()
                form.append("username", username);
                form.append("password", password);
                $("#loading").show();
                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,
                    data: form,
                    url: '/client/Trangchu/Dangnhap/',
                    success: function (res) {
                        if (res.status == 1){
                        window.location.href = "/client/Trangchu/Index"
                        }
                        else {
                            alert (res.mess)
                        }
                        $("#loading").hide();
                    },
                });
            },
        }
        login.init();
    </script>
</body>
</html>
