@section scripts{
    <script>


        var trangchu = {
            init: function () {
                trangchu.search(1);
                $("#search").change(function () {
                    trangchu.search(1);
                });
                $("#Pagesize").change(function () {
                    trangchu.search(1);
                });
                $('#update').on('show.bs.modal', function (event) {
                    var button = $(event.relatedTarget)
                    var idhd = button.data('whatever')

                    trangchu.getsanpham(idhd);

                });

                $("#save").click(function () {
                    trangchu.save();
                    trangchu.search(1);
                });
                
            },

                search: function (index) {
                    var name = $("#search").val();
                    var size = $("#Pagesize").val();
                    var form = new FormData()
                    form.append("name", name);
                    form.append("size", size);
                    form.append("index", index);
                    $.ajax({
                        type: 'POST',
                        dataType: 'Json',
                        contentType: false,
                        processData: false,
                        data: form,
                    url: '/client/Trangchu/ShowList/',
                        success: function (res) {
                            $("#tbData").html(res.data);
                            $("#pages").html(res.page);
                        },
                    });
                },
            getsanpham: function (id) {


                $.ajax({
                    type: 'get',
                    dataType: 'JSON',
                    url: '/client/Trangchu/getSanPham/' + id,
                    success: function (res) {
                        $("#edit_idp").val(res.data.idp);
                        $("#edit_name").text(res.data.name);
                        $("#edit_price").text(res.data.price);
                        $("#edit_image").attr("src", res.data.image);
                        $("#edit_quantity").text(res.data.quantity);
                        $("#edit_info").text(res.data.info);
                        
      
                    }
                });
            },

            save: function () {
                var idp = $("#edit_idp").val();
                var name = $("#edit_name").val();
                var price = $("#edit_price").val();
                var image = $("#edit_image").val();
                var quantity = $("#edit_quantity").val();
                var info = $("#edit_info").val();

                var form = new FormData()
                form.append("idp", idp);
                form.append("name", name);
                form.append("price", price);
                form.append("image", image);
                form.append("quantity", quantity);
                form.append("info", info);

                $.ajax({
                    type: 'POST',
                    dataType: 'Json',
                    contentType: false,
                    processData: false,
                    data: form,
                    url: '/client/Trangchu/Update/',
                    success: function (res) {

                        _layout.showtoast(res.mess);
                        trangchu.search(1);
                    },
                });
            },


        }

        trangchu.init();
        function goto(i) {
            trangchu.search(i);
        }
    </script>
}

