@* slide *@
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="path_to_your_icon/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
 
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://img4.thuthuatphanmem.vn/uploads/2020/06/26/hinh-mau-banner-dien-may_033706403.png" alt="Los Angeles" style="width:100%;">
                </div>

                <div class="item">
                    <img src="https://img4.thuthuatphanmem.vn/uploads/2020/06/26/hinh-mau-banner-dien-may_033706403.png" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="https://img4.thuthuatphanmem.vn/uploads/2020/06/26/hinh-mau-banner-dien-may_033706403.png" alt="New york" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
@* thong tin san pham *@
<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">

        <div class="row">
            
            <div class="col-md-3">
                <div class="dropdown" style="float:right">
                   
                </div>
            </div>
        </div>
        <table class="table">
          

            <tbody id="tbData"></tbody>
            
        </table>
    </div>
</div>



@section scripts{
    <script>


        var trangchu = {
            init: function () {
                trangchu.search(1);
                $("#search").change(function () {
                    trangchu.search(1);
                });
                $("#Pagesize").change(function () {
                    trangchu.search(1);
                });
                
            },

                search: function (index) {
                    var name = $("#search").val();
                    var size = $("#Pagesize").val();
                    var form = new FormData()
                    form.append("name", name);
                    form.append("size", size);
                    form.append("index", index);
                    $.ajax({
                        type: 'POST',
                        dataType: 'Json',
                        contentType: false,
                        processData: false,
                        data: form,
                    url: '/client/Trangchu/ShowList/',
                        success: function (res) {
                            $("#tbData").html(res.data);
                            $("#pages").html(res.page);
                        },
                    });
                },
            getsanpham: function (id) {


                $.ajax({
                    type: 'get',
                    dataType: 'JSON',
                    url: '/cilent/Trangchu/getSanPham/' + id,
                    success: function (res) {
                        $("#edit_idp").val(res.data.idp);
                        $("#edit_name").val(res.data.name);
                        $("#edit_price").val(res.data.price);
                        $("#edit_image").val(res.data.image);
                        
      
                    }
                });
            },


        }

        trangchu.init();
        function goto(i) {
            trangchu.search(i);
        }
    </script>
}

