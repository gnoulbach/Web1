    </div>

    <script>
        $(document).ready(function () {
            var $carousel = $('.carousel');

            $carousel.carousel({
                interval: 500
            });

            $carousel.hover(
                function () {
                    $(this).find('.carousel-control').fadeIn('fast');
                },
                function () {
                    $(this).find('.carousel-control').fadeOut('fast');
                }
            );
        });
    </script>
</body>
</html>



